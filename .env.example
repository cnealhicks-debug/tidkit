# TidKit Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE (Required for production)
# ===========================================
DATABASE_URL="postgresql://user:password@host:5432/tidkit"
DATABASE_URL_UNPOOLED="postgresql://user:password@host:5432/tidkit"

# ===========================================
# AUTHENTICATION
# ===========================================
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (for login and Google Drive)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:3001/api/auth/callback/google"

# Apple OAuth (optional)
APPLE_ID=""
APPLE_SECRET=""

# Magic Link Email (optional)
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
EMAIL_FROM="TidKit <noreply@tidkit.app>"

# ===========================================
# STORAGE
# ===========================================
# Vercel Blob (default storage)
BLOB_READ_WRITE_TOKEN=""
BLOB_URL=""

# iCloud CloudKit (optional)
ICLOUD_CONTAINER_ID=""
ICLOUD_API_TOKEN=""
ICLOUD_CLIENT_SECRET=""
ICLOUD_REDIRECT_URI=""
ICLOUD_ENVIRONMENT="development"

# ===========================================
# DEVELOPMENT
# ===========================================
NODE_ENV="development"
